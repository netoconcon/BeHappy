<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h1>Entre em Contato</h1>

      <%= simple_form_for @conflito do |f| %>
        <%= f.input :name %>
        <%= f.input :email %>
        <%= f.input :title %>
        <%= f.input :message %>
        <%= f.label "Respondido?" %>
        <%= f.check_box :answered %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>

    </div>
  </div>
</div>


